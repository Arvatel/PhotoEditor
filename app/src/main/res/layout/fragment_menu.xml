<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment">

    <TextView
        android:id="@+id/textChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="@string/choose_your_way"
        android:textColor="#78260C"
        android:textSize="35sp"
        android:fontFamily="@font/sanchez_italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textChoose"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/buttonPhotoEditor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/photo_editor"
            android:drawableTop="@drawable/ic_image"
            style="@style/ButtonsLight"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/buttonSplineLines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/spline_lines"
            android:drawableTop="@drawable/ic_spline"
            style="@style/ButtonsLight"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/buttonCube"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/cube"
            android:drawableTop="@drawable/ic_cube"
            style="@style/ButtonsLight"
            android:textSize="25sp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>