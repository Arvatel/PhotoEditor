<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="background">@color/colorBackground</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="OpenFileTheme">
        <item name="android:textColor">@color/colorTextOF</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ShowPhotoStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ShowPhotoStyle.Scaling" parent="ShowPhotoStyle">
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonsLight" parent="ButtonsStyle">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
    </style>

    <style name="ButtonsDark" parent="ButtonsStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorOrange</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
    </style>

</resources>
